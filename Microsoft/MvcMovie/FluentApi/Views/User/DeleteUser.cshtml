@model FluentApi.ViewModels.DeleteUserVM
@{
    ViewData["Title"] = "DeleteUser";
}

<div class="fw-bold text-center bg-primary bg-opacity-25 py-3">
    <h1>Welcome to Delete User Section</h1>
</div>

<div class="fw-bold text-center text-danger py-3">
    <div class="card">
    <h2>Are you sure to delete this User?</h2>
        <div class="card-body">
            <h5 class="card-title">User Details</h5>
            <p><strong>User Name:</strong> @Model.UserName</p>
            <p><strong>Passport Number:</strong> @Model.PassportNumber</p>
            <p><strong>City Name:</strong> @Model.CityName</p>
            <p><strong>Road Number:</strong> @Model.RoadNumber</p>
        </div>
    </div>
</div>


<form asp-action="DeleteUser" class="text-center py-3">

    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-primary">Back to List</a>

</form>
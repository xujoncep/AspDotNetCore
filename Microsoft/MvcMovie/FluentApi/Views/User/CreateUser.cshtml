@model FluentApi.ViewModels.CreateUserVM
@{
    ViewData["Title"] = "Create Student";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-2">
            <div class="card">
                <div class="card-body">
                    <form method="post" asp-action="CreateUser">

                        <div class="form-group">
                            <label asp-for="UserId"></label>
                            <input type="text" asp-for="UserId" class="form-control" placeholder="Enter UserID" />
                            <span asp-validation-for="UserId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="UserName"></label>
                            <input type="text" asp-for="UserName" class="form-control" placeholder="Enter UserName" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <br />

                        <div class="form-group">
                            <label asp-for="PassportId"></label>
                            <input type="text" asp-for="PassportId" class="form-control" placeholder="Enter PassportId" />
                            <span asp-validation-for="PassportId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="PassportNumber"></label>
                            <input type="text" asp-for="PassportNumber" class="form-control" placeholder="Enter Passport Number" />
                        </div>
                        <br />

                        <div class="form-group">
                            <input type="submit" value="Submit" class="btn btn-outline-success float-right" />
                        </div>

                    </form>

                </div>

            </div>
        </div>
    </div>

</div>


@model FormSubmission.Models.Student

@{
    ViewData["Title"] = "Create Student";
}

<h1>Create Student</h1>

<div class="container">
    <form id="studentForm">
        <div class="form-group">
            <label for="Name">Name</label>
            <input type="text" id="Name" name="Name" class="form-control" placeholder="Enter Name" required />
        </div>

        <div class="form-group">
            <label for="Email">Email</label>
            <input type="email" id="Email" name="Email" class="form-control" placeholder="Enter Email" required />
        </div>

        <br />
        <button type="submit" class="btn btn-success">Submit</button>
    </form>

    <div id="response-message" class="mt-3"></div>
</div>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    // Standalone function to serialize form data into JSON
    function serializeFormJSON(formElement) {
        var json = {};
        // Use FormData API to collect form data
        var formData = new FormData(formElement);

        // Loop through form data and add it to the JSON object
        formData.forEach(function (value, key) {
            json[key] = value;
        });

        return json;
    }

    // Document Ready Event
    $(function () {
        $('#studentForm').on('submit', function (event) {
            event.preventDefault(); // Prevent default form submission

            // Serialize form to JSON using the standalone function
            var formData = serializeFormJSON(this); // 'this' refers to the form element
            console.log(formData); // Debugging output

            // AJAX call to submit form data
            $.ajax({
                url: '@Url.Action("AjaxFormSerializeData", "Home")', // Controller Action URL
                type: 'POST',
                contentType: 'application/json', // Set content type to JSON
                data: JSON.stringify(formData), // Convert JSON to string
                success: function (response) {
                    var alertClass = response.success ? 'alert-success' : 'alert-danger';
                    $('#response-message').html(`<div class="alert ${alertClass}">${response.message}</div>`);
                },
                error: function () {
                    $('#response-message').html('<div class="alert alert-danger">An error occurred while submitting the form.</div>');
                }
            });
        });
    });
</script>

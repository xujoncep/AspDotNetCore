@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center fw-bold p-3">
    <h1>Different Way of From Submission</h1>
</div>

<div class="container col-8 offset-2">
    <div class="shadow-lg">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Weakly Typed Form</h5>
                <p class="card-text"></p>
                <a asp-action="WeaklyTypedForm" asp-controller="Home" class="btn btn-primary">Check</a>
            </div>
        </div>
    </div>
    <br />

    <div class="shadow-lg">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Storngly Typed Form</h5>
                <p class="card-text"></p>
                <a asp-action="StornglyTypedForm" asp-controller="Home" class="btn btn-primary">Check</a>
            </div>
        </div>
    </div>
    <br />

    <div class="shadow-lg">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"> JavaScript And Axios </h5>
                <p class="card-text"></p>
                <a asp-action="JavaScriptForm" asp-controller="Home" class="btn btn-primary">Check</a>
            </div>
        </div>
    </div>
    <br />

    <div class="shadow-lg">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"> Ajax Form Data </h5>
                <p class="card-text"></p>
                <a asp-action="AjaxFormData" asp-controller="Home" class="btn btn-primary">Check</a>
            </div>
        </div>
    </div>
    <br />

    <div class="shadow-lg">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"> Ajax Serialize Data </h5>
                <p class="card-text"></p>
                <a asp-action="AjaxFormSerializeData" asp-controller="Home" class="btn btn-primary">Check</a>
            </div>
        </div>
    </div>
    <br />

    <div class="shadow-lg">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"> Program Mentor</h5>
                <p class="card-text"></p>
                <a asp-action="Index" asp-controller="ProgramMentor" class="btn btn-primary">Check</a>
            </div>
        </div>
    </div>
    <br />

</div>
@model IEnumerable<DataAccessLayer.ViewModels.StudentViewModel>

@{
    ViewData["Title"] = "Student List";
}

<h2 class="text-center fw-bold">Student Management Area</h2>
<a class="btn btn-info float-end fw-bold" asp-action="Create">Add New Student</a>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Class</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Bio</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Class</td>
                <td>@student.Email</td>
                <td>@student.Phone</td>
                <td>@student.Bio</td>
                <td>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@student.Id">Details</a>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@student.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

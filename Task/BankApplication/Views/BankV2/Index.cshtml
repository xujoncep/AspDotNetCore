@model IEnumerable<BankApplication.Models.Entity.Bank>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-info fw-bold" asp-action="CreateBankWithMultipleBranch" asp-controller="BankV2">Create</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BankName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Logo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BankAddress)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BankName)
                </td>

                <td>
                    @if (item.Logo != null)
                    {
                        var fileName = System.IO.Path.GetFileName(item.Logo);
                        <img src="@Url.Action("GetFile", "Bank", new { fileName })" style="width:50px; height:50px;" />

                    }
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.BankAddress)
                </td>

                <td>
                    <a class="btn btn-warning" asp-action="EditBankWithMultipleBranch" asp-controller="BankV2" asp-route-id="@item.BankId">Update</a>
                </td>
            </tr>
        }
    </tbody>
</table>
